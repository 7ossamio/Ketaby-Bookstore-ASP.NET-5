@model  BookStore.WEB.ViewModels.CreateBookViewModel
<div>
  
    @using (Ajax.BeginForm("Edit", "Book", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "updateAdminPanel", OnSuccess = "closeDialog"}))
    {

        
        @Html.ValidationSummary(true)
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)
        <div class="form-group">
            <label for="Name">Name</label>
            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m=>m.Name)
        </div>
        <div class="form-group">
            <label for="Decription">Decription</label>
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = "5" })
            @Html.ValidationMessageFor(m => m.Description)
        </div>
        <div class="form-group">
            <label for="Price">Price</label>
            @Html.EditorFor(m => m.Price, new { htmlAttributes = new { @class = "form-control", placeholder = "Price in EGP is 40" } })
            @Html.ValidationMessageFor(m => m.Price)
            
        </div>
        <div class="form-group">
            <label for="Author">Author</label>
            @Html.DropDownListFor(m => m.AuthorId, Model.Authors as SelectList,null ,new {@class = "form-control"})
            @Html.ValidationMessageFor(m=>m.AuthorId)
      
        </div>
        <div class="form-group">
            <label for="Category">Genre</label>
            @Html.DropDownListFor(m => m.CategoryId, Model.Genres as SelectList, new { @class = "form-control" })
            @Html.ValidationMessageFor(m=>m.CategoryId)
       
        </div>
        <input type="submit" class="btn btn-secondary" value ="Confirm"/>
    }
</div>
