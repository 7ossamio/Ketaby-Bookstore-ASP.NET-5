@model IEnumerable<BookStore.BLL.DTO.BookDTO>
@Html.ActionLink("Add book", "Create", null, new { @class = "btn btn-primary mb-2" })
<table class="table table-hover">
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Name</td>
                <td>@book.Price EGP</td>
                <td>@book.Author</td>
                <td>@book.Category</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Book", new { id = book.Id },
                        new {@class= "viewDialog", data_dialog_title = "Editing a Book" })
                </td>
                <td>
                    @Ajax.ActionLink("Delete", "Delete", "Book",
                         new { id =book.Id},new AjaxOptions { HttpMethod="POST",UpdateTargetId = "updateAdminPanel",Confirm = "Are you sure you want to delete this item?"
                         })
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="@Url.Content("~/Scripts/developerScripts/EditDialogScript.js")"></script>