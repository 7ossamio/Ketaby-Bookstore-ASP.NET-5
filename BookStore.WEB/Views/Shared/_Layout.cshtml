<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 𝐊𝐞𝐭𝐚𝐛𝐲 | كتابي</title>
    @Styles.Render("~/Content/css")
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

</head>
<body>
    <nav class="navbar navbar-dark bg-primary navbar-expand-lg sticky-top">
        <img src="https://i.ibb.co/wWkc9Tc/Ketaby-3.png" title="Logo" alt="additional title" style="height:50px; width: 400px" />

        <!-- <a href="#" class="navbar-brand">𝐊𝐞𝐭𝐚𝐛𝐲 | كتابي</a> -->


        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
            </ul>
            @using (Html.BeginForm("Index", "Home", FormMethod.Get, new { @class = "form-inline" }))
            {

           
              <button class="btn btn-outline-light my-2 my-sm-0" type="submit"><img src="https://i.postimg.cc/brr6TFyc/Pin-Clipart-com-bubble-bath-clipart-153148.png" title="Must Logo" alt="additional title" style="height:18px; width: 18px" /></button>
            <input class="form-control mr-sm-2" placeholder="Book" data-autocomplete-source='@Url.Action("Autocomplete", "Home")' name="searchName" />


   
          
            
            }
            @if (!User.Identity.IsAuthenticated)
            {
        @Html.ActionLink("Login", "Login", "Account", null, new { @class = "btn-outline-light btn ml-1" }) }
    else
    {
        @Html.ActionLink("Logout", "Logout", "Account", null, new { @class = "btn-outline-light btn ml-1" })}
            @if (User.IsInRole("admin"))
            {
        @Html.ActionLink("Admin panel", "Main", "Book", null, new { @class = "btn btn-outline-light ml-1" })}

            <a class="btn btn-outline-light mx-1" href="@Url.Action("Index","ShoppingCart",  new { returnUrl = Request.Url.PathAndQuery })">
                <i class="fas fa-shopping-cart mr-1"></i>Cart
            </a>

                <a href="https://www.must.edu.eg/">
                    <img src="https://i.ibb.co/QdwVjkx/mustlogo.png" title="Must Logo" alt="additional title" style="height:40px; width: 40px" />
                </a>
           

        </div>
    </nav>
    <section class="container-fluid mt-2">
        <div class="row">
            <div class="col-sm-2">
                @Html.Action("GetNav", "Nav")
            </div>
            <div class="col-sm-10">@RenderBody()</div>
         </div>
    </section>

    @Scripts.Render("~/bundles/js")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("scripts", required: false)
</body>
</html>
